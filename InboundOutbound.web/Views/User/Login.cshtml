@model LoginRequestDto
<div class="container">
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border board-primary rounded p-lg-5 pr-5 pb-5">
            <div class="text-center">

                <h4 class="text-info">User Login</h4>
            </div>
            <h6 class="text-success text-center">@TempData["error"]</h6>
            <h6 class="text-success text-center">@TempData["success"]</h6>
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" placeholder="Enter User Name" class="form-control" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input id="password" type="password" asp-for="Password" placeholder="Enter Password" class="form-control" autocomplete="off" />
                    <i class="far fa-eye" id="togglePassword" style="float: right;margin-left: -25px;margin-top: -25px;position: relative;z-index: 2;"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary" value="Login " />
                </div>
            </form>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<script type="text/javascript">
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');

    togglePassword.addEventListener('click', function (e) {
        // toggle the type attribute
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        // toggle the eye slash icon
        this.classList.toggle('fa-eye-slash');
    });
</script>