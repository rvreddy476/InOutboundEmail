@model MailRequestDto
<form asp-action="SendMail" enctype="multipart/form-data">

    <div class="container border p-3">
        <h3>Send Email</h3>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">ToEmail</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ToEmail" class="form-control" />
                <span asp-validation-for="ToEmail" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">ToName</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ToName" class="form-control" />
                <span asp-validation-for="ToName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Subject</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Subject" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Body</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Body" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px">Attachments</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Attachments" class="form-control" />
                <input asp-for="Attachments" hidden class="form-control" />
                <span asp-validation-for="Attachments" class="text-danger"></span>
            </div>
            <div></div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary border form-control">Back To List</a>
                </div>
                <div class="col-6 col-md-3">
                    <input type="submit" class="btn btn-primary form-control" value="Send" />
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}